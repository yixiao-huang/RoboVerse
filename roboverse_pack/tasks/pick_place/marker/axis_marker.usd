#usda 1.0
(
    defaultPrim = "axis_marker"
    upAxis = "Z"
)

def Xform "axis_marker" (
    apiSchemas = ["PhysicsRigidBodyAPI"]
)
{
    def Xform "base_link"
    {
        # X axis - Red
        def Cube "x_axis"
        {
            double3 xformOp:translate = (0.05, 0, 0)
            double3 xformOp:scale = (0.1, 0.01, 0.01)
            uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:scale"]

            color3f[] primvars:displayColor = [(1.0, 0.0, 0.0)]
        }

        # Y axis - Green
        def Cube "y_axis"
        {
            double3 xformOp:translate = (0, 0.05, 0)
            double3 xformOp:scale = (0.01, 0.1, 0.01)
            uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:scale"]

            color3f[] primvars:displayColor = [(0.0, 1.0, 0.0)]
        }

        # Z axis - Blue
        def Cube "z_axis"
        {
            double3 xformOp:translate = (0, 0, 0.05)
            double3 xformOp:scale = (0.01, 0.01, 0.1)
            uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:scale"]

            color3f[] primvars:displayColor = [(0.0, 0.0, 1.0)]
        }
    }
}
